{
  "openapi": "3.0.2",
  "info": {
    "title": "Todolist RESTful API",
    "description": "OpenAPI untuk todolist",
    "version": "1",
    "contact": {
      "name": "ayam goreng rendah lemak",
      "email": "ayam@gmail.com",
      "url": "https://www.ayamgoren.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  },
  "servers": [
    {
      "url": "http://{environment}.todolist.com",
      "description": "Development server todolist",
      "variables": {
        "environment": {
          "default": "development",
          "description": "Development environment",
          "enum": ["development", "production", "prod"]
        }
      }
    }
  ],
  "externalDocs": {
    "description": "Find out more about my todolist app",
    "url": "https://www.ayamgoren.com"
  },
  "paths": {
    "/todoslist": {
      "get": {
        "summary": "get all todoList",
        "description": "hanya mengembalikan todolist yang aktif",
        "responses": {
          "200": {
            "description": "get all todoList",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "priority": {
                        "type": "number",
                        "format": "int32"
                      },
                      "tags": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "description": "success get all todoList",
                    "value": [
                      {
                        "id": "1",
                        "name": "ayam goreng rendah lemak",
                        "priority": 1,
                        "tags": ["ayam", "goreng", "rendah", "lemak"]
                      },
                      {
                        "id": "2",
                        "name": "malingkingkong",
                        "priority": 1,
                        "tags": ["maling", "kingkong"]
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "include_done",
            "description": "include done todolist in the result",
            "required": false,
            "in": "query",
            "schema": {
              "type": "boolean",
              "default": true,
              "nullable": true
            }
          },
          {
            "name": "name",
            "description": "search todolist by name",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": false,
              "maxLength": 100,
              "minLength": 1
            },
            "examples": {
              "name": {
                "description": "example name ayam goreng",
                "value": "ayam goreng"
              },
              "jun": {
                "description": "jiahhhh",
                "value": "malingkingkong"
              }
            }
          }
        ]
      },
      "post": {
        "summary": "create new todoList",
        "description": "membuat todolist baru",
        "responses": {
          "200": {
            "description": "success create new todoList",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "priority": {
                      "type": "number",
                      "format": "int32"
                    },
                    "tags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "examples": {
                  "ayam": {
                    "description": "ayam goreng rendah lemak",
                    "value": {
                      "id": "1",
                      "name": "ayam goreng rendah lemak",
                      "priority": 1,
                      "tags": ["ayam", "goreng", "rendah", "lemak"]
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "examples": {
                "name": {
                  "value": {
                    "name": "ayam goreng rendah lemak",
                    "tags": ["ayam", "goreng", "rendah", "lemak"],
                    "priority": 1
                  }
                },
                "jun": {
                  "value": {
                    "name": "malingkingkong",
                    "tags": ["maling", "kingkong"],
                    "priority": 2
                  }
                }
              },
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": true,
                    "minLength": 1
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "priority": {
                    "type": "integer",
                    "format": "int32",
                    "required": true,
                    "default": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    "/todolist/{id}": {
      "delete": {
        "summary": "delete todoList",
        "description": "menghapus todolist",
        "responses": {
          "200": {
            "description": "success delete todoList",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    }
                  }
                },
                "examples":{
                  "success": {
                    "description": "success delete todoList",
                    "value": {
                      "success": true
                    }
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "todoListId",
            "description": "todoList Id for Deleted",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      },
      "put": {
        "summary": "update todoList",
        "description": "mengupdate todolist",
        "responses": {
          "200": {
            "description": "success update new todoList",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "priority": {
                      "type": "number",
                      "format": "int32"
                    },
                    "tags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "examples": {
                  "ayam": {
                    "description": "ayam goreng rendah lemak",
                    "value": {
                      "id": "1",
                      "name": "ayam goreng rendah lemak",
                      "priority": 1,
                      "tags": ["ayam", "goreng", "rendah", "lemak"]
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "examples": {
                "name": {
                  "value": {
                    "name": "ayam goreng rendah lemak",
                    "tags": ["ayam", "goreng", "rendah", "lemak"],
                    "priority": 1
                  }
                },
                "jun": {
                  "value": {
                    "name": "malingkingkong",
                    "tags": ["maling", "kingkong"],
                    "priority": 2
                  }
                }
              },
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 1,
                    "required": true
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "priority": {
                    "type": "integer",
                    "format": "int32",
                    "default": 1,
                    "required": true
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "todoListId",
            "description": "todoList Id for Update",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "examples": {
              "todoListId": {
                "description": "example todoListId 5f9b3b5b5b5b5b5b5b5b5b5b",
                "value": "5f9b3b5b5b5b5b5b5b5b5b5b"
              },
              "jun": {
                "description": "jiahhhh",
                "value": "5f9b3b5b5b5b5b5b5b5b5b5b"
              }
            }
          }
        ]
      }
    }
  }
}
